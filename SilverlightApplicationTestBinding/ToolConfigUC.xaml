<UserControl x:Class="SilverlightApplicationTestBinding.ToolConfigUC"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="43" x:Name="Self">
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="LightGreen" Offset="0"></GradientStop>
                <GradientStop Color="LightYellow" Offset="1"></GradientStop>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel>
            <TextBlock Text="Directory of ....."/>
            <WatermarkedTextBox x:Name="wt" />
        </StackPanel>
    </Grid>
</UserControl>
